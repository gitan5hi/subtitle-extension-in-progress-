{
  "manifest_version": 3,
  "name": "Fluent in Subtitles: Live Subtitles",
  "version": "1.0",
  "description": "Live subtitles overlay for YouTube.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabCapture"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
            "16":"icon.png"
        }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}


